
mixin reviewBox(review)
    .reviews__card
        .reviews__avatar
            img.reviews__avatar-img(src=`/img/users/${review.user.photo}`, alt=`${review.name}`)
            h6.reviews__user Jim Brown
        p.reviews__text= review.review
        .reviews__rating
            each rating in [1,2,3,4,5]
                svg.reviews__star(class= `reviews__star--${(review.rating >= rating) ? 'active' : 'inactive'}`)
                    use(xlink:href='/img/icons.svg#icon-star')
