header.header
    nav.nav.nav--tours
        a(href="/" class="nav__el") All Tours
        //- form.nav__search
        //-     button.nav__search-btn
        //-         svg: use(xlink:href="/img/icons.svg#icon-search")
        //-     input(type="text" placeholder="Search tours" class="nav__search-input")
    .header__logo: img(src="/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--user
        
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href="/me")
                img(src=`/img/users/${user.photo}` alt=`${user.name.split(' ')[0]} photo` class="nav__user-img")
                span= user.name.split(' ')[0]
        else
            a.nav__el(href="/login") Login 
            a.nav__el.nav__el--cta(href="#") Sign up 
